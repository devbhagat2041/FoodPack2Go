@model IEnumerable<FoodPack2Go.Core.ProductModel>
@{
    ViewData["Title"] = "PRODUCT";
}
<h3>@ViewData["Title"]</h3>
<hr />


@if (TempData["successmessage"] != null)
{
    <div class="alert alert-success" id="successMessage">
        @TempData["successmessage"]
    </div>
}

@if (TempData["errormessage"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["errormessage"]
    </div>
}

<script>
    // Timeout to hide success message after 5 seconds
    setTimeout(function () {
        $('#successMessage').fadeOut('fast');
    }, 5000);

    // Timeout to hide error message after 5 seconds
    setTimeout(function () {
        $('#errorMessage').fadeOut('fast');
    }, 5000);
</script>

  
    
<form>
    <button asp-action="Create" asp-controller="Product" class="btn btn-dark mb-3"> ADD </button>
    <button asp-action="Import" asp-controller="Product" class="btn btn-light mb-3"> IMPORT </button>

    <div style="overflow:auto">
    <table class="table table-bordered table-responsive table-hover" id="vc">
        <thead>
            <tr class="table-active">

                <th>ProductID</th>
                <th>ProductName</th>
                <th>CategoryID</th>
                <th>SubCategoryID</th>
                <th>QuantityPerUnit</th>
                <th>UnitPrice</th>
                <th>Capacity</th>
                <th>Size</th>
                <th>Material</th>
                <th>Discount</th>
                <th>UnitInStock</th>
                <th>ImageURL</th>
                <th>AltText</th>
                <th>Description</th>
                <th>CreatedBy</th>
                <th>ModifiedBy</th>
                <th>Action</th>

            </tr>

        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.ProductID</td>
                        <td>@p.ProductName</td>
                        <td>@p.CategoryID</td>
                        <td>@p.SubCategoryID</td>
                        <td>@p.QuantityPerUnit</td>
                        <td>@p.UnitPrice</td>
                        <td>@p.Capacity</td>
                        <td>@p.Size</td>
                        <td>@p.Material</td>
                        <td>@p.Discount</td>
                        <td>@p.UnitInStock</td>
                        <td><img src="/assets/images/@p.ImageURL" /></td>
                        <td>@p.AltText</td>
                        
                        <td>@p.Description</td>
                        <td>@p.CreatedBy</td>
                        <td>@p.ModifiedBy</td>
                        <td class="center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-controller="Product" asp-route-id="@p.ProductID"
                                   class="btn btn-warning">EDIT </a>
                                <a asp-action="Delete" asp-controller="Product" asp-route-id="@p.ProductID"
                                   class="btn btn-danger">REMOVE  </a>

                            </div>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="16">
                        <div>NO DATA AVAILABLE !!!!!!</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</form>
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#vc').DataTable();
        });
    </script>
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">