

@model FoodPack2Go.Core.ProductModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>
    <style>

        input {
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: blue;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: black;
            }

        .text-danger {
            color: red;
        }

        .main {
            display: flex;
        }

        .inner {
            width: 600px;
            padding: 5px;
        }
    </style>
</head>
<body>
    <hr />
    <form method="post" asp-action="Create" asp-controller="Product" enctype="multipart/form-data" style="margin-left:10%; background-color: #f4f4f4;
            border-radius: 8px;
            padding:50px;
            margin-top:30px;
            margin-bottom:30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 800px;
            box-sizing: 600px;
        }">
        <h2 style="text-align: center; color: #333;">PRODUCT ADD</h2>
        <div class="main">
            <div class="inner">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="ProductName" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="CategoryID" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <select id="CategoryID" asp-for="CategoryID" asp-items="@ViewBag.Categories" class="form-control" required>
                        <option value="">Select Category</option> <!-- Default placeholder option -->
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="SubCategoryID" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <select id="SubCategoryID" asp-for="SubCategoryID" class="form-control" required>
                        <option value="">Select Subcategory</option> <!-- Placeholder option -->
                    </select>
                    <span asp-validation-for="SubCategoryID" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="QuantityPerUnit" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="QuantityPerUnit" type="text" class="form-control" />
                    <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="UnitPrice" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="UnitPrice" type="text" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Capacity" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="Capacity" type="text" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Size" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="Size" type="text" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <div class="inner">
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Material" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="Material" type="text" class="form-control" />
                    <span asp-validation-for="Material" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Discount" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="Discount" type="text" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="UnitInStock" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="UnitInStock" type="text" class="form-control" />
                    <span asp-validation-for="UnitInStock" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="ImageURL" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="ImageURL" type="file" class="form-control" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AltText" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="AltText" type="text" class="form-control" />
                    <span asp-validation-for="AltText" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Description" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <input asp-for="Description" type="text" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <input type="submit" style="height:48px" class="form-control btn btn-primary mt-4" value="ADD" />
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#CategoryID').change(function () {
                var categoryId = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetSubCategories", "Product")',
                    data: { categoryId: categoryId },
                    success: function (data) {
                        $('#SubCategoryID').empty();
                        $.each(data, function (i, item) {
                            $('#SubCategoryID').append($('<option>', {
                                value: item.value,
                                text: item.text
                            }));
                        });
                    },
                    error: function () {
                        alert("Error occurred while retrieving subcategories.");
                    }
                });
            });
        });
    </script>
</body>
</html>
