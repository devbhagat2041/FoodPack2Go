@model FoodPack2Go.Core.AboutUsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>

        input {
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: blue;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: black;
            }

        .text-danger {
            color: red;
        }

        .main {
            display: flex;
        }

        .inner {
            width: 600px;
            padding: 5px;
        }
    </style>
</head>

<body>

    <hr />
    <form method="post"  asp-action="Edit" asp-controller="AboutUs" style="margin-left:10%; background-color: #f4f4f4;
            border-radius: 8px;
            padding:50px;
margin-top:30px;
margin-bottom:30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 800px;
            box-sizing:600px;
        }">

        <h2 class="mt-6" style="  text-align: center;
            color: #333; ">
            <b>" EDIT ABOUT ME "</b>
        </h2><br />



        <div class="main">
            <div class="inner">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AboutUsId" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input type="" asp-for="AboutUsId" class="form-control" />
                    <span asp-validation-for="AboutUsId" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Title" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input type="" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Ashortdescription" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="Ashortdescription" class="form-control" />
                    <span asp-validation-for="Ashortdescription" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="ADescription" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="ADescription" class="form-control" />
                    <span asp-validation-for="ADescription" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="ButtonText" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="ButtonText" class="form-control" />
                    <span asp-validation-for="ButtonText" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="TotalCustomer" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="TotalCustomer" type="text" class="form-control" />
                    <span asp-validation-for="TotalCustomer" class="text-danger"></span>
                </div>



            </div>

            <div class="inner">
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="SoldProduct" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="SoldProduct" type="text" class="form-control" />
                    <span asp-validation-for="SoldProduct" class="text-danger"></span>
                </div>


                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="Awards" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="Awards" type="text" class="form-control" />
                    <span asp-validation-for="Awards" class="text-danger"></span>
                </div>
               @*  <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AboutImage" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="AboutImage" type="file" class="form-control" />
                    <span asp-validation-for="AboutImage" class="text-danger"></span>
                </div> *@
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AboutImage" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <!-- Display the current image -->
                    <img src="/assets/images/@Model.AboutImage" style="height:100px;width:100px" />

                    <!-- Add a hidden field to store the current image URL -->
                    <input type="hidden" asp-for="AboutUsId" value="@Model.AboutUsId" />

                    <!-- Provide an option to upload a new image -->
                    <input asp-for="AboutImage" type="file" class="form-control" />
                    <span asp-validation-for="AboutImage" class="text-danger"></span>
                </div>
                <br />
                @* <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AboutImage2" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="AboutImage2" type="file" class="form-control" />
                    <span asp-validation-for="AboutImage2" class="text-danger"></span>
                </div> *@

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="AboutImage2" style="display: block; margin-bottom: 8px; color: #333;"></label>
                    <!-- Display the current image -->
                    <img src="/assets/images/@Model.AboutImage2" style="height:100px;width:100px" />

                    <!-- Add a hidden field to store the current image URL -->
                    <input type="hidden" asp-for="AboutUsId" value="@Model.AboutUsId" />

                    <!-- Provide an option to upload a new image -->
                    <input asp-for="AboutImage2" type="file" class="form-control" />
                    <span asp-validation-for="AboutImage2" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group" style="margin-bottom: 16px;">
                    <label style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input type="submit" style="height:48px" class="form-control btn btn-warning mt-4" value="EDIT" />


                    <span class="text-danger"></span>
                </div>

            </div>
        </div>




    </form>

</body>
</html>




