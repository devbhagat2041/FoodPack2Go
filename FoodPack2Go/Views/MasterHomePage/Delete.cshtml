@model FoodPack2Go.Core.MasterHomePage


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>

        input {
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-danger {
            width: 100%;
            padding: 10px;
            background-color:red;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: black;
            }

        .text-danger {
            color: red;
        }

        .main {
            display: flex;
        }

        .inner {
            width: 600px;
            padding: 5px;
        }
    </style>
</head>

<body>

    <hr/>
    <form method="post"  asp-action="Delete" asp-controller="MasterHomePage" style="margin-left:10%; background-color: #f4f4f4;
            border-radius: 8px;
            padding:50px;
margin-top:30px;
margin-bottom:30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 800px;
            box-sizing:600px;
        }">

        <h2 style="  text-align: center;
            color: #333;">
            <b>REMOVE HOMEPAGE</b>
        </h2>
        <div class="main">
            <div class="inner">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="HomeId" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="HomeId" class="form-control" />
                    <span asp-validation-for="HomeId" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="DescriptionOffer" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="DescriptionOffer" class="form-control" />
                    <span asp-validation-for="DescriptionOffer" class="text-danger"></span>
                </div>
                
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="WebsiteTitle" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="WebsiteTitle" class="form-control" />
                    <span asp-validation-for="WebsiteTitle" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="FeaturedProductTitle" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="FeaturedProductTitle" class="form-control" />
                    <span asp-validation-for="FeaturedProductTitle" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="FeaturedProductDescription" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="FeaturedProductDescription" type="text" class="form-control" />
                    <span asp-validation-for="FeaturedProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoTitle" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoTitle" type="text" class="form-control" />
                    <span asp-validation-for="PromoTitle" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoTagline" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoTagline" type="text" class="form-control" />
                    <span asp-validation-for="PromoTagline" class="text-danger"></span>
                </div>

                
            </div>

            <div class="inner">
                
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoDescription" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoDescription" type="text" class="form-control" />
                    <span asp-validation-for="PromoDescription" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoProductname" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoProductname" type="text" class="form-control" />
                    <span asp-validation-for="PromoProductname" class="text-danger"></span>
                </div>
              
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoOffertag" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoOffertag" type="text" class="form-control" />
                    <span asp-validation-for="PromoOffertag" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="CompanyContactNo" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="CompanyContactNo" type="file" class="form-control" />
                    <span asp-validation-for="CompanyContactNo" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="CompanyEmail" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="CompanyEmail" type="text" class="form-control" />
                    <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="CompanyDescription" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="CompanyDescription" type="text" class="form-control" />
                    <span asp-validation-for="CompanyDescription" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="CompanyAddress" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="CompanyAddress" type="text" class="form-control" />
                    <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="PromoImage" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="PromoImage" type="file" class="form-control" />
                    <span asp-validation-for="PromoImage" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.PromoImage))
                {
                    <div>

                        <strong>Current PromoImage:</strong> @Model.PromoImage

                    </div>

                }
                <br />
                <div class="form-group" style="margin-bottom: 16px;">
                    <label asp-for="BgImage" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
                    <input asp-for="BgImage" type="file" class="form-control" />
                    <span asp-validation-for="BgImage" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(Model.BgImage))
                {
                    <div>

                        <strong>Current BgImage:</strong> @Model.BgImage

                    </div>

                }
                <br />

            </div>
        </div>

        <button type="submit" class="btn btn-danger">REMOVE</button>

       

    </form>
   
</body>
</html>


