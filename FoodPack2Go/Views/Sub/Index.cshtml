@model IEnumerable<FoodPack2Go.Core.SubModel>
@{
    ViewData["Title"] = "SUB-CATEGORY";
}
<h3>@ViewData["Title"]</h3>
<hr />
@if (TempData["successmessage"] != null)
{
    <div class="alert alert-success" id="successMessage">
        @TempData["successmessage"]
    </div>
}

@if (TempData["errormessage"] != null)
{
    <div class="alert alert-danger" id="errorMessage">
        @TempData["errormessage"]
    </div>
}

<script>
    // Timeout to hide success message after 5 seconds
    setTimeout(function () {
        $('#successMessage').fadeOut('fast');
    }, 5000);

    // Timeout to hide error message after 5 seconds
    setTimeout(function () {
        $('#errorMessage').fadeOut('fast');
    }, 5000);
</script>

<form>
    <button asp-action="Create" asp-controller="Sub" class="btn btn-dark mb-3">Create SubCategory</button>
    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr class="table-active">
                <th>SubCategoryID</th>
                <th>CategoryID</th>
                <th>SubName</th>
                <th>Action</th>

             
            </tr>

        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.SubCategoryID</td>
                        <td>@p.CategoryID</td>
                        <td>@p.SubCategoryName</td>
                     
                        <td class="center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-controller="Sub" asp-route-id="@p.SubCategoryID"
                                    class="btn btn-warning"> EDIT </a>
                                <a asp-action="Delete" asp-controller="Sub" asp-route-id="@p.SubCategoryID"
                                   class="btn btn-danger"> DELETE  </a>

                            </div>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="4">
                        <div>NO DATA AVAILABLE !!!!!!</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
