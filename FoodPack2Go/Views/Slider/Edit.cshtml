@model FoodPack2Go.Core.Slider
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <style>

        .form-group {
            margin-bottom: 16px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #333;
        }

        input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: yellow;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: black;
            }

        .text-danger {
            color: red;
        }

        .signup-link {
            text-align: center;
            margin-top: 16px;
        }

            .signup-link a {
                color: #007bff;
                text-decoration: none;
            }
    </style>
</head>

<body class="abc" style="margin: 0;
            padding: 0;
            margin-bottom:30px;
            background-color: #ffffff;
            align-items: center;

            justify-content: center;
            height: 100vh;">

    <form method="post"  asp-action="Edit" asp-controller="Slider" style=" background-color: #f4f4f4;
            padding: 50px;
            margin-left:33%;
margin-top:50px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            box-sizing: border-box;">
        <h2 style=" text-align: center;
            color: #333;">
            EDIT Slider
        </h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group" style="margin-bottom: 16px;">
            <label asp-for="SliderId" style="display: block;
            margin-bottom: 8px;
            color: #333;"></label>
            <input asp-for="SliderId" class="form-control" />
            <span asp-validation-for="SliderId" class="text-danger"></span>
        </div>

        @* <div class="form-group">
            <label asp-for="SliderImage">SliderImage</label>
            <input type="file" asp-for="SliderImage" class="form-control" />
            <span asp-validation-for="SliderImage" class="text-danger"></span>
        </div> *@

        <div class="form-group" style="margin-bottom: 16px;">
            <label asp-for="SliderImage" style="display: block; margin-bottom: 8px; color: #333;"></label>
            <!-- Display the current image -->
            <img src="/assets/images/@Model.SliderImage" style="height:100px;width:100px" />

            <!-- Add a hidden field to store the current image URL -->
            <input type="hidden" asp-for="SliderId" value="@Model.SliderId" />

            <!-- Provide an option to upload a new image -->
            <input asp-for="SliderImage" type="file" class="form-control" />
            <span asp-validation-for="SliderImage" class="text-danger"></span>
        </div>
       


        <br />
         <div class="form-group">
            <label asp-for="SliderTitle"> SliderTitle</label>
            <input asp-for="SliderTitle" class="form-control" />
            <span asp-validation-for="SliderTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SliderDescription"> SliderDescription</label>
            <input asp-for="SliderDescription" id="formattedTextBox" class="form-control" />
            <span asp-validation-for="SliderDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SliderButtonTitle"> SliderButtonTitle</label>
            <input asp-for="SliderButtonTitle" class="form-control" />
            <span asp-validation-for="SliderButtonTitle" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
    
</body>

</html>

