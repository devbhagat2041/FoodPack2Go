

                          

@model IEnumerable<FoodPack2Go.Core.Payment>
@{
    ViewData["Title"] = "PAYMENT_DETAILS";
}
<h3>@ViewData["Title"]</h3>
<hr />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="vc" class="table">
                            <thead>
                                <tr>
                                    <th>Payment ID</th>
                                    <th>Amount</th>
                                    <th>Currency</th>
                                    <th>Status</th>
                                    <th>Payment Method</th>
                                    <th>Customer ID</th>
                                    <th>Created At</th>
                                    <!-- Add more columns as needed -->
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.PaymentId</td>

                                    <td>@Html.Raw(p.Amount)</td>
                                    <td>@Html.Raw(p.Currency)</td>
                                    <td>@Html.Raw(p.Status)</td>
                                    <td>@Html.Raw(p.PaymentMethod)</td>
                                    <td>@Html.Raw(p.CustomerID)</td>
                                    <td>@Html.Raw(p.CreatedAt)</td>

                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#vc').DataTable();
            });
        </script>
    }